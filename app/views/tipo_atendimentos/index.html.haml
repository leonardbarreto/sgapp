-model_class = TipoAtendimento
%h1 
  Tipo de Atendimento
  %small - Listagem
%p
%table.table.table-striped
  %thead
    %th #
    %th Descricao
    %th Duração (min)
    %th
    

    %tbody
      - @tipo_atendimentos.each_with_index do |tipo_atendimento,index|
        %tr
          %td 
            = index+1
          %td 
            = link_to tipo_atendimento.descricao, tipo_atendimento
          %td
            = tipo_atendimento.duracao
          %td 
            = link_to edit_tipo_atendimento_path(tipo_atendimento), :class=>'btn btn-mini' do 
              %i.icon-edit
              Alterar
            = link_to tipo_atendimento_path(tipo_atendimento),:method=>:delete, :class=>'btn btn-mini btn-danger',:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Tem certeza?')) } do
              %i.icon-trash.icon-white
              Apagar
            
%br
= link_to new_tipo_atendimento_path, :class=>'btn btn-primary' do
  %i.icon-file.icon-white 
  Novo

