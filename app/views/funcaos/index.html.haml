-model_class = Funcao
%h1 
    Funções
    %small - Listagem
%p
%table.table.table-striped
    %thead
        %th #
        %th Descrição
        %th 
    %tbody
        -@funcaos.each_with_index do |f,index|
            %tr
                %td 
                    =index+1
                %td 
                    =f.descricao
                %td
                    = link_to edit_funcao_path(f), :class=>'btn btn-mini' do 
                        %i.icon-edit
                        Alterar
                    = link_to funcao_path(f),:method=>:delete, :class=>'btn btn-mini btn-danger',:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Tem certeza?')) } do
                        %i.icon-trash.icon-white
                        Apagar
= link_to new_funcao_path, :class=>'btn btn-primary' do
    %i.icon-file.icon-white 
    Novo
%p
