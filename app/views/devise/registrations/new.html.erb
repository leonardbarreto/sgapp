<h2 class="form-signin-heading">Sign up</h2>
  <%= devise_error_messages! %>

  <div><%= f.email_field :email, :class=>"input-block-level", :placeholder=>"EndereÃ§o de Email" %></div>

  <div><%= f.password_field :password, :class=>"input-block-level", :placeholder=>"Senha" %></div>

  <div><%= f.password_field :password_confirmation, :class=>"input-block-level", :placeholder=>"Confirme a senha" %></div>

