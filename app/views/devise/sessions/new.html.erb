<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html=>{:class=>"form-signin"}) do |f| %>
	<h2 class="form-signin-heading">Acessar Sistema</h2>
  	<%= f.email_field :email, :class=>"input-block-level", :placeholder=>"EndereÃ§o de Email" %>
  	<%= f.password_field :password, :class=>"input-block-level", :placeholder=>"Senha" %>
  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", :class=>"btn btn-large btn-primary" %></div>
  <%= render "devise/shared/links" %>
<% end %>


