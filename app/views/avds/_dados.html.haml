:css
	.no-space [class*="span"] {
		margin-left: 0;
		text-align: center;
	}
.container-fluid
	.row-fluid.no-space
		.span2
			Banho
		.span2
			Vestir
		.span2
			Higiene
		.span2
			Transferência
		.span2
			Continência
		.span2
			Alimentação
	.row-fluid
		= form_for @avd, :remote=> true do |f|
		
			=f.hidden_field :atendimento_id
			
			= f.text_field :banho, :class=>'span2', :readonly=>true
		
			= f.text_field :vestir, :class=>'span2',:readonly=>true
		
			= f.text_field :higiene,:class=>'span2',:readonly=>true
		
			= f.text_field :transferencia,:class=>'span2',:readonly=>true
		
			= f.text_field :continencia,:class=>'span2',:readonly=>true
		
			= f.text_field :alimentacao,:class=>'span2',:readonly=>true
		= link_to edit_avd_path(@avd), :class=>'btn btn-default', :remote=>true do 
			%i.icon-edit
			Alterar