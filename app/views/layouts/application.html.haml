          .container.nav-collapse
            %ul.nav
              - if user_signed_in?
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle"=>"dropdown", :href=>"#"}
                    Cadastro
                    %b.caret
                  %ul.dropdown-menu
                    //%li
                      
                    //%li.divider{"role"=>"presentation"}
                    - if current_user.admin?
                      %li
                        %a{:href=>users_path}
