                      %a{:href=>funcaos_path} Funções  
                    %li
                      %a{:href=>tipo_atendimentos_path} Tipos de Atendimento  
                    %li
                      %a{:href=>"status#index"} Status de atendimento  
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle"=>"dropdown", :href=>"#"}
                    Agenda
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      %a{:href=>atendimentos_path} Atendimentos  
                    %li
                      %a{:href=>agenda_profissionals_path} Profissional
                %li
                  %a{:href=>pacientes_path}Pacientes
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle"=>"dropdown", :href=>"#"}
                    Relatório
                    %b.caret
                  %ul.dropdown-menu
                    %li.dropdown-submenu
                      %a{:href=>"#"} Atendimentos  
                      %ul.dropdown-menu

                        %li.dropdown-header Produção
                        %li.divider
                        %li
                          %a{:href=>atendimento_reports_path} da Unidade
                          %a{:href=>funcionario_reports_path} por profissional
                    %li
                      %a{:href=>"#"} Funcionário
                    %li
                      %a{:href=>paciente_reports_path} Pacientes

                /%li
                /  %a{:href=>"#"}Atendimento

                
            %form.navbar-form.pull-right
              %ul.nav
                - if user_signed_in?
                  %li.dropdown
                    %a.dropdown-toggle{"data-toggle"=>"dropdown",:href=>"#"} 
                      = current_user.email
                      %b.caret
                    %ul.dropdown-menu
                      %li= link_to "Editar", edit_user_registration_path
                      %li= link_to "Logout",destroy_user_session_path, :method => :delete
                - else
                  %li= link_to('Login', new_user_session_path)
