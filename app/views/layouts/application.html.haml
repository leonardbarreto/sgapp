!!!5
%html(lang="pt-br")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title Sga
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href= root_url) Início
          .container.nav-collapse
            %ul.nav
              - if user_signed_in?
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle"=>"dropdown", :href=>"#"}
                    Cadastro
                    %b.caret
                  %ul.dropdown-menu
                    //%li
                      
                    //%li.divider{"role"=>"presentation"}
                    %li
                      %a{:href=>users_path}
                        %i{:class=>"icon-user"} 
                        Usuários
                      
                    %li
                      %a{:href=>"pages/index"} Funcionários
                %li
                  %a{:href=>"#"}Agenda
                %li
                  %a{:href=>"#"}Atendimento
                %li
                  %a{:href=>pacientes_path} Pacientes
                
            %form.navbar-form.pull-right
              %ul.nav
                - if user_signed_in?
                  %li.dropdown
                    %a.dropdown-toggle{"data-toggle"=>"dropdown",:href=>"#"} 
                      = current_user.email
                      %b.caret
                    %ul.dropdown-menu
                      %li= link_to "Editar", edit_user_registration_path
                      %li= link_to "Logout",destroy_user_session_path, :method => :delete
                - else
                  %li= link_to('Login', new_user_session_path)
    .container
      .content
        .row
          .span12  
            = bootstrap_flash
            = yield
    = javascript_include_tag "application"
