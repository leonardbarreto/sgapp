<%- model_class = User -%>
<div class="page-header">
  <!--h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1-->
    <h1><%=t '.title', :default => 'Usuário' %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th>Último acesso</th>
      <th>Permissão</th>
      <!--th><%=t '.actions', :default => t("helpers.actions") %></th-->
    </tr>
  </thead>
  <tbody>
    <% @users.each do |u| %>
      <tr>
        <td><%= link_to u.email, user_path(u) %></td>
        <td><%= u.last_sign_in_at %></td> 
        <td><%= u.role %></td>
        <td><%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_path(u), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_path(u),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Tem certeza?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
      
    <% end %>
  </tbody>
</table>

